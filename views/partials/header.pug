block head
  link(rel="stylesheet" type="text/css" href="/css/homepage.css")

.navbar.navbar-light.fixed-top.navbar-expand-lg.bg-light(style="background: linear-gradient(40deg,#ffd86f,#fc6262) !important;")
  .container
    a.navbar-brand.text-white(href='/')
      img.logo-image(src="/assets/img/logo_no_bg.png")
    button.navbar-toggler.navbar-dark(type='button', data-toggle='collapse', data-target='.navbar-collapse', style="background: linear-gradient(90deg,rgb(240, 130, 104),#fc6262) !important;")
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title === 'Offers') ? 'active' : undefined)
          a.nav-link(href='/offers') Ресторанти
      ul.nav.navbar-nav.ml-auto
        li.fas.fa-info-circle.nav-item.text-white.mr-3(style="font-size: 50; margin-top: 0.8rem")
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link.text-white(href='/login') Влез
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-link.text-white(href='/signup') Регистрация
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')  
              span=user.email || user.id
              i.caret
            div.dropdown-menu
              if !user.restaurantExtension || !user.restaurantExtension.restaurantName
                a.dropdown-item(href='/orders') Моите поръчки
              else
                a.dropdown-item(href='/orders') Получени поръчки
                a.dropdown-item(href='/restaurants/' + user.id) Моят ресторант 
              div.dropdown-divider
              a.dropdown-item(href='/logout') Излез
